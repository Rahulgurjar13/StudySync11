import { useState, useEffect, useRef } from "react";
import { Button } from "@/components/ui/button";
import { Input } from "    // Load today's accumulated focus time from database (only completed sessions)
    if (user) {
      console.log('ðŸ“Š TIMER: Loading today\'s progress from database...');
      api.focus.getTodayProgress().then(({ focusMinutes, sessionsCompleted }) => {
        console.log('ðŸ“Š TIMER: Database returned:', {
          focusMinutes,
          sessionsCompleted,
          isTimerActive: isActive,
          mode
        });
        
        // Store DB value separately
        setDbFocusMinutes(focusMinutes);
        // Set the display value (will be updated by timer if active)
        setTotalFocusTime(focusMinutes);
        console.log('âœ… TIMER: Set DB focus time to', focusMinutes, 'minutes');
